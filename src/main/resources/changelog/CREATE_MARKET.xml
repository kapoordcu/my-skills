<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">


    <property name="table.name" value="market" global="false"/>

    <changeSet id="EBETRISK-45-1" author="kapoor, ninjas">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="${table.name}"/>
            </not>
        </preConditions>

        <comment>create table ${table.name}</comment>

        <!-- Create table -->
        <createTable tableName="${table.name}">
            <column name="id" type="BIGINT(20)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="market_id" type="BIGINT(20)">
                <constraints nullable="false"/>
            </column>
            <column name="channel_type" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="channel_id" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="live" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>

            <column name="event_id" type="BIGINT(20)">
                <constraints nullable="false"/>
            </column>

            <column name="max_stake" type="BIGINT(20)" defaultValue="0"/>
            <column name="total_stake" type="BIGINT(20)" defaultValue="0"
                    remarks="Sum of stake of all outcomes"
            />
            <column name="open_stake" type="BIGINT(20)" defaultValue="0"
                    remarks="Will change during assignment in comparison to total_stake"/>
            <column name="open_prize" type="DECIMAL(14, 2)" defaultValue="0.0"
                    remarks="Max open prize from all outcomes of this market"
            />

            <column name="update_at" type="DATETIME"/>
            <column name="status" type="VARCHAR(30)"/>

        </createTable>

        <!-- Index -->
        <createIndex tableName="${table.name}" indexName="idx_market_id_channel" unique="true">
            <column name="market_id"/>
            <column name="channel_type"/>
            <column name="channel_id"/>
            <column name="live"/>
        </createIndex>

        <createIndex tableName="${table.name}" indexName="idx_event_id_channel">
            <column name="event_id"/>
            <column name="channel_type"/>
            <column name="channel_id"/>
            <column name="live"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>